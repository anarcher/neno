{
    "name": "NENO",
    "description": "A browser extension for saving web pages to NENO",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "256": "assets/images/logo.png"
      }
    },
    "icons": {
      "256": "assets/images/logo.png"
    },
    "options_page": "options.html"
  }